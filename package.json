{
  "name": "zenith-legal-app",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:mobile": "npm run start -w @zenith/mobile",
    "dev:admin": "npm run dev -w @zenith/admin",
    "dev": "npm run dev:mobile",
    "postinstall": "patch-package",
    "dns:discover": "bash ./scripts/auth/discover-dns-provider.sh",
    "supabase:auth:get-config": "bash ./scripts/supabase/get-auth-config.sh",
    "supabase:auth:patch-config": "bash ./scripts/supabase/patch-auth-config.sh",
    "supabase:auth:build-resend-patch": "bash ./scripts/supabase/build-resend-auth-patch.sh",
    "build": "npm run build -ws --if-present",
    "lint": "npm run lint -ws --if-present",
    "test": "npm run test -ws --if-present",
    "typecheck": "npm run typecheck -ws --if-present",
    "verify": "npm run lint && npm run typecheck && npm run test",
    "prepare": "npm run build -w @zenith/shared"
  },
  "overrides": {
    "react-native-reanimated": "4.1.1",
    "react-native-worklets": "0.5.1"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "next": "^16.1.6",
    "patch-package": "^8.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
